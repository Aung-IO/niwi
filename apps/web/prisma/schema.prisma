datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Blog {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  slug        String @unique
  title       String
  description String
  user        User   @relation(fields: [userId], references: [id])
  userId      String @db.ObjectId
}

enum UserRole {
  USER
  ADMIN
}

model User {
  id    String   @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  email String?  @unique
  image String
  role  UserRole
  salt  String

  // Password
  password      String
  resetPassword String?

  // Other Oauth
  githubId   String? @unique
  facebookId String? @unique
  twitterId  String? @unique

  // blog.prisma
  Blog Blog[]
