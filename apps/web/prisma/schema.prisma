model Blog {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  slug        String @unique
  title       String
  description String
  user        User   @relation(fields: [userId], references: [id])
  userId      String @db.ObjectId
}

enum UserRole {
  USER
  ADMIN
}

model User {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String   @unique
  image    String
  password String
  role     UserRole
  salt     String

