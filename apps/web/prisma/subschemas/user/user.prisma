enum UserRole {
    USER
    ADMIN
}

model User {
    id    String   @id @default(auto()) @map("_id") @db.ObjectId
    name  String
    email String?  @unique
    image String
    role  UserRole
    salt  String

    // Password
    password      String
    resetPassword String?

    // Other Oauth
    githubId   String? @unique
    facebookId String? @unique
    twitterId  String? @unique

    // blog.prisma
    Blog Blog[]
    // end 

    // library.prisma
    // end
}
