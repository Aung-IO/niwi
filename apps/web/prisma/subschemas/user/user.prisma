enum UserRole {
    USER
    ADMIN
}

model User {
    id       String   @id @default(auto()) @map("_id") @db.ObjectId
    name     String
    email    String?  @unique
    image    String
    password String
    role     UserRole
    salt     String

    // Other Oauth
    githubId String? @unique

    // blog.prisma
    Blog Blog[]
    // end 

    // library.prisma
    // end
}
